{
  "name": "just-location-base",
  "version": "1.0.1",
  "description": "Returns a location base and base path",
  "author": "Tomas Szabo <tomas.szabo@deftomat.com>",
  "license": "MIT",
  "homepage": "https://github.com/deftomat/just-location-base",
  "repository": "github:deftomat/just-location-base",
  "keywords": ["location", "base", "path"],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "postcommit": "git update-index -g",
    "prepublishOnly": "tsc",
    "formatting:lint": "tslint --project tsconfig.json",
    "formatting:fix":
      "tslint --config tslint.fix.json --project tsconfig.json --fix && prettier --write '**/*.{js,jsx,ts,tsx,css,scss,html,json,yml,graphql,md}'",
    "formatting:check-rule-conflicts":
      "tslint-config-prettier-check ./tslint.json"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --config tslint.fix.json --project tsconfig.json --fix",
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,css,scss,html,json,yml,graphql,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/node": "^8.9.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "prettier": "1.11.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "typescript": "^2.7.2"
  }
}
